          <%= f.input :name, required: true, placeholder: "Wedding Name", label: false %>
          <%= f.input :address, required: true, placeholder: "Address", label: false %>
            <%= f.input :wedding_date, required: true, label: false %>
          <%= f.button :submit, class: "btn-success" %>
         <% end %>
