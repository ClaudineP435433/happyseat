<!doctype html>
<html>
  <head>
    <meta charset='utf-8' />
    <title>My Seating PLan</title>
    <%= wicked_pdf_stylesheet_link_tag "pdf" -%>
    <%= wicked_pdf_javascript_include_tag "number_pages" %>
    <style>
      .flexrow {
        display: -webkit-box;
        display: -webkit-flex;
        display: flex;
      }

      .flexrow > div {
        -webkit-box-flex: 1;
        -webkit-flex: 1;
        flex: 1;
        margin-right: 10%;
        border: 1px solid rgb(160,160,160);
      }

      .flexrow > div:last-child {
        margin-right: 0;
      }


      .flexcenter {
        display: -webkit-box;
        display: -webkit-flex;
        display: flex;
      }

      .flexcenter > div {
        -webkit-box-flex: 1;
        -webkit-flex: 1;
        flex: 1;
        box-align: center;
        box-pack: center;
      }

    .frame-pdf {
      width: 288px;
      margin: 15px 0;
    }

    .table-margin {
      margin-bottom: 5px;
    }

    .pdf-table-frame {
      border: 1px solid (160,160,160);
      box-shadow: 0 0 5px (160,160,160);
    }

    .padding-top-12 {
      padding-top: 12px;
    }

    .padding-top-6 {
      padding-top: 6px;
    }

    .pdf-name {
      font-size: 10px;
      padding-left: 2px;
      padding-top: 1px;
    }

  .background-container {
    width: 100%;
    height: 685px;
    position: relative;
    margin-top: 10px;
  }

  .table-container {
    width: 93%;
    height: 94%;
    background-color: white;
    position: absolute;
    top: 26px;
    left: 10px;
    bottom: 10px;
    right: 10px;
    margin: 0 auto;
  }

  .background-grey {
    background-color: rgb(245 ,245 ,245 );
  }

  .render-table-pdf {
    margin: 0 5px;
  }

  #grey-border {
    border: 1px solid rgb(160,160,160);
    box-shadow: none;
  }

    </style>
  </head>





 <body>
    <div class="container">
      <%= wicked_pdf_image_tag 'frame.png', class: "background-container" %>
        <div class="table-container">

          <div class="row">
            <div class="col-xs-6 col-xs-offset-3">
              <div class="wedding-title-pdf">
                <h3>Wedding of <%= current_user.bride_first_name %> and <%= current_user.groom_first_name %></h3>
              </div>
            </div>
          </div>

          <div class="render-table-pdf">
              <%= render "tables/pdf_table" %>
          </div>

        </div>
    </div>
  </body>
</html>

