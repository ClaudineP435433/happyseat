
<!-- Navbar auto -->


<div class="wrapper">
  <!-- Toolbar -->

  <div class="toolbar">

    <div class="toolbar-name">
      <h3>Add a Participant</h3>
    </div>

    <div class="toolbar-form">
      <%= simple_form_for @participant do |f| %>
        <%= f.error_notification %>
        <%= f.input :first_name, required: true %>
        <%= f.input :first_name, required: true %>
        <%= f.input :age_range, collection: Participant.age_ranges, prompt: "Select Age", required: true %>
        <%= f.input :family_type, collection: Participant.family_types, prompt: "Select Family Link", required: true %>
        <%= f.button :submit %>
       <% end %>
    </div>

    <div class="toolbar-buttons">
      <%=  link_to "Relationships", relationships_path, class: "btn btn-sucess"  %>
      <%=  link_to "Finalize", "", class: "btn btn-sucess"  %>
    </div>

  </div>

  <!-- Tables#index -->

  <div class="wrapper-tables">
    <div class="container-fluid">
      <div class="row">
        <% @tables.each do |table| %>
          <div class="col-md-4 col-sm-6 col-xs-12">
            <div class="table-section">
              <div class="table-card-name"> <h3>table.name</h3></div>
              <div class="table-card">
                <div class="avatar-frame">
                  <% @nbhaut.times do %>
                    <div class="avatar"></div>
                  <% end %>
                </div>
                <div class="table-frame"></div>
                <div class="avatar-frame">
                  <% @nbbas.times do %>
                    <div class="avatar"></div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

</div>
<!-- Footer -->
