                  <%# end %>
                </div> -->

               <!--  <div class="avatar-frame">
                  <%# @nbbas.times do %>
                    <div class="avatar"></div>
                  <%# end %>
                </div> -->


              </div>
            </div>
          </div>
        <% end %>

      </div>
    </div>
  </div>
