<div class="modal fade" id="exampleModalParticipant" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header" style="background-image: linear-gradient(-225deg, rgba(70,70,70,0.2) 0%, rgba(55,55,55,0.1) 20%), url('<%= image_path "modal-pic.png" %>');">
<!--   <h5 class="modal-title" id="exampleModalLongTitle">Participant details</h5>
          <span aria-hidden="true">&times;</span> -->
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>

      </div>
        <div class="modal-body">
          <div class="toolbar-form">
            <div class="toolbar-form-one-participant">
            <%= simple_form_for(participant, remote: true) do |f| %>
              <%= f.error_notification %>
              <%= f.input :first_name, required: true, placeholder: "First Name", label: false %>
              <%= f.input :last_name, required: true, placeholder: "Last Name", label: false %>
              <div class="nested-prompt">
                <%= f.input :age_range, collection: Participant.age_ranges.keys, prompt: "Age", required: true, label: false, class: "prompt-size nested-prompt-age" %>
                <%= f.input :family_type, collection: Participant.family_types.keys, prompt: "Family Link", required: true, label: false %>
              </div>
              <%= f.button :submit, class: "btn-success " %>
             <% end %>
            </div>
          </div>
        </div>
    </div>
  </div>
</div>





